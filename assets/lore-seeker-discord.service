[Unit]
Description=Lore Seeker Discord bot
Documentation=https://github.com/fenhl/lore-seeker-discord
After=network.target

[Service]
Restart=always
ExecStart=/home/fenhl/.cargo/bin/cargo run --release
ExecReload=/home/fenhl/.cargo/bin/cargo run --release -- reload
ExecStop=/home/fenhl/.cargo/bin/cargo run --release -- quit
User=fenhl
Group=fenhl
WorkingDirectory=/opt/git/github.com/fenhl/lore-seeker-discord/master

[Install]
WantedBy=multi-user.target
